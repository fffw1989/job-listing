<div class="pull-right">
  <%= link_to("发布神器", new_job_path, :class => "btn btn-default" ) %>
</div>

<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按用户反馈排序", jobs_path(:order => "by_job.resumes.count"))%>
        </li>
        <li>
          <%= link_to("按服务时长排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按服务佣金排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发布时间排序", jobs_path ) %>

        </li>
    </ul>
</div>

<table class="table table-boldered">
  <thead>
  <tr>
    <td>成长加速器</td>
    <td>用户反馈</td>
    <td>服务时长（小时）</td>
    <td>服务佣金（元）</td>
    <td>发布时间</td>
  </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td><%= link_to(job.resumes.count, admin_job_resumes_path(job) ) %></td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
